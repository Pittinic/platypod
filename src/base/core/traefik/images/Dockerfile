ARG BUILDER_IMAGE
ARG SOURCE_IMAGE

FROM ${BUILDER_IMAGE} AS builder
COPY resources /resources
ARG ENVSUBST_TARGET_FOLDERS="/resources"
ARG JELLYFIN_CERT_RESOLVER
ARG JELLYFIN_ENTRYPOINT
ARG JELLYFIN_HOST
ARG JELLYFIN_PORT
ARG JELLYFIN_RULE
ARG JELLYFIN_SERVICE_NAME
ARG JELLYFIN_URL
RUN /envsubst.sh

FROM ${SOURCE_IMAGE} AS target
COPY --from=builder /resources /
